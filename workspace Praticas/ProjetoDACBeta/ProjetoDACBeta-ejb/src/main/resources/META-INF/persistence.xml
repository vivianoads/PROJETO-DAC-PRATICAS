<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="ProjetoDACBeta-PU" transaction-type="JTA">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <jta-data-source>jdbc/ProjetoDac</jta-data-source>
    <class>br.edu.ifpb.projetodac.entidades.Administrador</class>
    <class>br.edu.ifpb.projetodac.entidades.CoordenadorArea</class>
    <class>br.edu.ifpb.projetodac.entidades.Curso</class>
    <class>br.edu.ifpb.projetodac.entidades.Disciplina</class>
    <class>br.edu.ifpb.projetodac.entidades.Log</class>
    <class>br.edu.ifpb.projetodac.entidades.Login</class>
    <class>br.edu.ifpb.projetodac.entidades.Periodo</class>
    <class>br.edu.ifpb.projetodac.entidades.Professor</class>
    <class>br.edu.ifpb.projetodac.entidades.Relatorio</class>
    <class>br.edu.ifpb.projetodac.entidades.Restricao</class>
    <class>br.edu.ifpb.projetodac.entidades.Usuario</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>
  </persistence-unit>
</persistence>
